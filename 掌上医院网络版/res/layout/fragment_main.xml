<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
		
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:fadingEdge="none"
	    android:scrollbars="vertical" >

        <FrameLayout android:id="@+id/container" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:layout_below="@id/action_bar">
        
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:orientation="vertical" >
	
			    <ImageView 
			        android:id="@id/news_center_text" 
			        android:layout_width="wrap_content" 
			        android:layout_height="wrap_content" 
			        android:layout_margin="10.0dip" 
			        android:src="@drawable/news_center" />
			    <android.support.v4.view.ViewPager 
			        android:id="@+id/banner" 
			        android:background="#fff1efef" 
			        android:layout_width="fill_parent" 
			        android:layout_height="200dp" 
			        android:layout_above="@id/center" 
			        android:layout_below="@id/news_center_text" 
			        android:layout_alignParentLeft="true" 
			        android:layout_alignParentRight="true" 
			        android:layout_alignParentStart="true" 
			        android:layout_alignParentEnd="true"/>
			    
			    <RelativeLayout 
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content" 
			        android:layout_marginBottom="10.0dip" 
			        android:layout_alignBottom="@id/banner">
			        
			        <ImageView 
			            android:id="@+id/image_1" 
			            android:layout_width="wrap_content" 
			            android:layout_height="wrap_content" 
			            android:layout_marginRight="5.0dip" 
			            android:src="@drawable/news_image_unselected" 
			            android:layout_toLeftOf="@id/image_2" />
			        
			        <ImageView 
			            android:id="@+id/image_2" 
			            android:layout_width="wrap_content" 
			            android:layout_height="wrap_content" 
			            android:layout_marginRight="5.0dip" 
			            android:src="@drawable/news_image_unselected" 
			            android:layout_toLeftOf="@id/image_3" />
			        
			        <ImageView 
			            android:id="@+id/image_3" 
			            android:layout_width="wrap_content" 
			            android:layout_height="wrap_content" 
			            android:src="@drawable/news_image_unselected" 
			            android:layout_centerHorizontal="true" />
			        
			        <ImageView 
			            android:id="@+id/image_4" 
			            android:layout_width="wrap_content" 
			            android:layout_height="wrap_content" 
			            android:layout_marginLeft="5.0dip" 
			            android:src="@drawable/news_image_unselected" 
			            android:layout_toRightOf="@id/image_3" />
			        
			        <ImageView 
			            android:id="@+id/image_5" 
			            android:layout_width="wrap_content" 
			            android:layout_height="wrap_content" 
			            android:layout_marginLeft="5.0dip" 
			            android:src="@drawable/news_image_unselected" 
			            android:layout_toRightOf="@id/image_4" />
			        
			    </RelativeLayout>
			    
			    <View 
			        android:id="@+id/center" 
			        android:layout_width="1.0dip" 
			        android:layout_height="0.0dip" 
			        android:layout_centerVertical="true" />
			    
			    <ImageView 
			        android:id="@id/shortcuts_text" 
			        android:layout_width="wrap_content" 
			        android:layout_height="wrap_content" 
			        android:layout_margin="10.0dip" 
			        android:src="@drawable/shortcuts" 
			        android:layout_below="@id/center" />
			    
			    <TableLayout 
			        android:layout_width="fill_parent" 
			        android:layout_height="fill_parent" 
			        android:layout_marginLeft="35.0dip" 
			        android:layout_marginRight="35.0dip" 
			        android:layout_below="@id/shortcuts_text">
			        
			        <TableRow 
			            android:layout_width="fill_parent" 
			            android:layout_height="0.0dip" 
			            android:layout_marginBottom="10.0dip" 
			            android:layout_weight="1.0">
			            
			            <RelativeLayout 
			                android:orientation="vertical" 
			                android:layout_width="0.0dip" 
			                android:layout_height="fill_parent" 
			                android:layout_weight="1.0">
			                
			                <LinearLayout 
			                    android:orientation="vertical" 
			                    android:layout_width="fill_parent" 
			                    android:layout_height="wrap_content" 
			                    android:layout_centerInParent="true"> 
			                    
			                    <!-- 医院特色 -->
			                    <ImageView  
			                        android:layout_gravity="center_horizontal" 
			                        android:id="@+id/mainfunc_yiyuantese" 
			                        android:layout_width="57.0dip" 
			                        android:layout_height="57.0dip" 
			                        android:src="@drawable/mainfunc_yiyuantese"/>
			                    
			                    <cn.edu.nju.zsyy.controls.FontyTextView 
			                        android:textSize="11.0sp" 
			                        android:gravity="center" 
			                        android:layout_gravity="center_horizontal" 
			                        android:layout_width="fill_parent" 
			                        android:layout_height="wrap_content" 
			                        android:layout_marginTop="10.0dip" 
			                        android:text="医院特色" />
			                    
			                </LinearLayout>
			                
			            </RelativeLayout>
			            
			            <RelativeLayout 
			                android:orientation="vertical" 
			                android:layout_width="0.0dip" 
			                android:layout_height="fill_parent" 
			                android:layout_weight="1.0">
			                
			                <LinearLayout 
			                    android:orientation="vertical" 
			                    android:layout_width="fill_parent" 
			                    android:layout_height="wrap_content" 
			                    android:layout_centerInParent="true">
			                    
			                    <!-- 就医导航 -->
			                    <ImageView 
			                        android:layout_gravity="center_horizontal" 
			                        android:id="@+id/mainfunc_jiuyidaohang" 
			                        android:layout_width="57.0dip" 
			                        android:layout_height="57.0dip" 
			                        android:src="@drawable/mainfunc_jiuyidaohang"/>
			                    
			                    <cn.edu.nju.zsyy.controls.FontyTextView 
			                        android:textSize="11.0sp" 
			                        android:gravity="center" 
			                        android:layout_gravity="center_horizontal" 
			                        android:layout_width="fill_parent" 
			                        android:layout_height="wrap_content" 
			                        android:layout_marginTop="10.0dip" 
			                        android:text="就医导航" />
			                    
			                </LinearLayout>
			                
			            </RelativeLayout>
			            
			            <RelativeLayout 
			                android:orientation="vertical" 
			                android:layout_width="0.0dip" 
			                android:layout_height="fill_parent" 
			                android:layout_weight="1.0">
			                
			                <LinearLayout 
			                    android:orientation="vertical" 
			                    android:layout_width="fill_parent" 
			                    android:layout_height="wrap_content" 
			                    android:layout_centerInParent="true">
			                    
			                    <!-- 预约挂号 -->
			                    <ImageView 
			                        android:layout_gravity="center_horizontal" 
			                        android:id="@+id/mainfunc_yuyueguahao" 
			                        android:layout_width="57.0dip" 
			                        android:layout_height="57.0dip" 
			                        android:src="@drawable/mainfunc_yuyueguahao"/>
			                    
			                    <cn.edu.nju.zsyy.controls.FontyTextView 
			                        android:textSize="11.0sp" 
			                        android:gravity="center" 
			                        android:layout_gravity="center_horizontal" 
			                        android:layout_width="fill_parent" 
			                        android:layout_height="wrap_content" 
			                        android:layout_marginTop="10.0dip" 
			                        android:text="预约挂号" />
			                    
			                </LinearLayout>
			                
			            </RelativeLayout>
			            
			        </TableRow>
			        
			        <TableRow 
			            android:layout_width="fill_parent" 
			            android:layout_height="0.0dip" 
			            android:layout_weight="1.0">
			            
			            <RelativeLayout 
			                android:orientation="vertical" 
			                android:layout_width="wrap_content" 
			                android:layout_height="fill_parent" 
			                android:layout_weight="1.0">
			                
			                <LinearLayout 
			                    android:orientation="vertical" 
			                    android:layout_width="fill_parent" 
			                    android:layout_height="wrap_content" 
			                    android:layout_centerInParent="true"> 
			                    
			                    <!-- 我的服务 -->
			                    <ImageView 
			                        android:layout_gravity="center_horizontal" 
			                        android:id="@+id/mainfunc_wodefuwu" 
			                        android:layout_width="57.0dip" 
			                        android:layout_height="57.0dip" 
			                        android:src="@drawable/mainfunc_wodefuwu" />
			                    
			                    <cn.edu.nju.zsyy.controls.FontyTextView 
			                        android:textSize="11.0sp" 
			                        android:gravity="center" 
			                        android:layout_gravity="center_horizontal" 
			                        android:layout_width="fill_parent" 
			                        android:layout_height="wrap_content" 
			                        android:layout_marginTop="10.0dip" 
			                        android:text="我的服务" />
			                    
			                </LinearLayout>
			                
			            </RelativeLayout>
			            
			            <RelativeLayout 
			                android:orientation="vertical" 
			                android:layout_width="wrap_content" 
			                android:layout_height="fill_parent" 
			                android:layout_weight="1.0">
			                
			                <LinearLayout 
			                    android:orientation="vertical" 
			                    android:layout_width="fill_parent" 
			                    android:layout_height="wrap_content" 
			                    android:layout_centerInParent="true">
			                    
			                    <!-- 操作指南 -->
			                    <ImageView 
			                        android:layout_gravity="center_horizontal" 
			                        android:id="@+id/mainfunc_caozuozhinan" 
			                        android:layout_width="57.0dip" 
			                        android:layout_height="57.0dip" 
			                        android:src="@drawable/mainfunc_caozuozhinan"/>
			                    
			                    <cn.edu.nju.zsyy.controls.FontyTextView 
			                        android:textSize="11.0sp" 
			                        android:gravity="center" 
			                        android:layout_gravity="center_horizontal" 
			                        android:layout_width="fill_parent" 
			                        android:layout_height="wrap_content" 
			                        android:layout_marginTop="10.0dip" 
			                        android:text="操作指南" />
			                    
			                </LinearLayout>
			                
			            </RelativeLayout>
			            
			            <RelativeLayout 
			                android:layout_width="wrap_content" 
			                android:layout_height="fill_parent" 
			                android:layout_weight="1.0">
			               
							<LinearLayout 
							    android:orientation="vertical" 
							    android:layout_width="fill_parent" 
							    android:layout_height="wrap_content" 
							    android:layout_centerInParent="true">
			                    
							    <!-- 更多 -->
			                    <ImageView 
			                        android:layout_gravity="center_horizontal" 
			                        android:id="@+id/mainfunc_gengduo" 
			                        android:layout_width="57.0dip" 
			                        android:layout_height="57.0dip" 
			                        android:src="@drawable/mainfunc_gengduo"/>
			                    
			                    <cn.edu.nju.zsyy.controls.FontyTextView 
			                        android:textSize="11.0sp" 
			                        android:gravity="center" 
			                        android:layout_gravity="center_horizontal" 
			                        android:layout_width="fill_parent" 
			                        android:layout_height="wrap_content" 
			                        android:layout_marginTop="10.0dip"
			                        android:text="更多" />
			                    
			                </LinearLayout>
			                
			            </RelativeLayout>
			            
			        </TableRow>
			        
			    </TableLayout>
			    
			</LinearLayout>
			
		</FrameLayout>
			
	</ScrollView>
	
</LinearLayout>