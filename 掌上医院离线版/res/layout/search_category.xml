<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    
    <RelativeLayout 
        android:id="@+id/content_mutiwindow" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        
        <LinearLayout 
            android:orientation="horizontal" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent">
            
            <ImageView 
                android:id="@+id/muti_window_bg_left" 
                android:background="@drawable/search_category_bg_left" 
                android:layout_width="wrap_content" 
                android:layout_height="fill_parent" />
            
            <ImageView 
                android:id="@+id/muti_window_bg_middle" 
                android:background="@drawable/search_category_bg_middle" 
                android:layout_width="wrap_content" 
                android:layout_height="fill_parent" />
            
            <ImageView 
                android:id="@+id/muti_window_bg_right" 
                android:background="@drawable/search_category_bg_right" 
                android:layout_width="0.0dip" 
                android:layout_height="fill_parent" 
                android:layout_weight="1.0" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:gravity="center_horizontal" 
            android:orientation="vertical" 
            android:paddingLeft="16.0dip" 
            android:paddingTop="16.0dip" 
            android:paddingRight="16.0dip" 
            android:paddingBottom="5.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:layout_alignParentBottom="true">
            
            <TextView 
                android:textSize="12.0dip" 
                android:textColor="@color/black" 
                android:gravity="center_vertical" 
                android:id="@+id/title" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="0.0dip" 
                android:text="选择一个分类" />
            
            <LinearLayout 
                android:id="@+id/search_category" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:baselineAligned="false">
                
                <LinearLayout 
                    android:gravity="center" 
                    android:id="@+id/search_category_all_container" 
                    android:background="@drawable/background_globle_buttons" 
                    android:paddingTop="10.0dip" 
                    android:paddingBottom="10.0dip" 
                    android:focusable="true" 
                    android:layout_width="0.0dip" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:clickable="true">
                    
                    <ImageView 
                        android:id="@+id/search_category_all" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:src="@drawable/search_category_all" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="5dip"
                        android:text="搜全部"
                        android:textSize="9sp"/>
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:gravity="center" 
                    android:id="@+id/search_category_keshi_container" 
                    android:background="@drawable/background_globle_buttons" 
                    android:paddingTop="10.0dip" 
                    android:paddingBottom="10.0dip" 
                    android:focusable="true" 
                    android:layout_width="0.0dip" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:clickable="true">
                    
                    <ImageView 
                        android:id="@+id/search_category_keshi" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:src="@drawable/search_category_keshi" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="5dip"
                        android:text="搜科室"
                        android:textSize="9sp"/>
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:gravity="center" 
                    android:id="@+id/search_category_yisheng_container" 
                    android:background="@drawable/background_globle_buttons" 
                    android:paddingTop="10.0dip" 
                    android:paddingBottom="10.0dip" 
                    android:focusable="true" 
                    android:layout_width="0.0dip" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:clickable="true">
                    
                    <ImageView 
                        android:id="@+id/search_category_yisheng" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:src="@drawable/search_category_yisheng" />
                
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="5dip"
                        android:text="搜医生"
                        android:textSize="9sp"/>
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:gravity="center" 
                    android:id="@+id/search_category_weizhi_container" 
                    android:background="@drawable/background_globle_buttons" 
                    android:paddingTop="10.0dip" 
                    android:paddingBottom="10.0dip" 
                    android:focusable="true" 
                    android:layout_width="0.0dip" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:clickable="true">
                    
                    <ImageView 
                        android:id="@+id/search_category_weizhi" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:src="@drawable/search_category_weizhi" />
                
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="5dip"
                        android:text="搜位置"
                        android:textSize="9sp"/>
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:gravity="center" 
                    android:id="@+id/search_category_jibing_container" 
                    android:background="@drawable/background_globle_buttons" 
                    android:paddingTop="10.0dip" 
                    android:paddingBottom="10.0dip" 
                    android:focusable="true" 
                    android:layout_width="0.0dip" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:clickable="true">
                
                    <ImageView 
                        android:id="@+id/search_category_jibing" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:src="@drawable/search_category_jibing" />
                
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="5dip"
                        android:text="搜疾病"
                        android:textSize="9sp"/>
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:gravity="center" 
                    android:id="@+id/search_category_zhengzhuang_container" 
                    android:background="@drawable/background_globle_buttons" 
                    android:paddingTop="10.0dip" 
                    android:paddingBottom="10.0dip" 
                    android:focusable="true" 
                    android:layout_width="0.0dip" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:clickable="true">
                
                    <ImageView 
                        android:id="@+id/search_category_zhengzhuang" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:src="@drawable/search_category_zhengzhuang" />
                
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="5dip"
                        android:text="搜症状"
                        android:textSize="9sp"/>
                    
                </LinearLayout>
                
            </LinearLayout>
            
            <ImageView 
                android:id="@+id/search_separator" 
                android:background="@drawable/toolbar_search_sp" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" />
            
            <LinearLayout 
                android:gravity="center_vertical" 
                android:id="@+id/search_advanced" 
                android:background="@drawable/background_globle_buttons" 
                android:paddingTop="10.0dip" 
                android:paddingBottom="10.0dip" 
                android:focusable="true" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content">
                
                <TextView 
                    android:textSize="12.0dip" 
                    android:textColor="@color/black" 
                    android:gravity="center_vertical" 
                    android:id="@+id/title_bar" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="高级搜索" />
                
                <LinearLayout 
                    android:gravity="right" 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content">
                    
                    <ImageView 
                        android:gravity="center_vertical" 
                        android:id="@+id/setting" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:src="@drawable/toolbar_setting" />
                
                </LinearLayout>
                
            </LinearLayout>

            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:text="性别"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/gender_any"
                        android:layout_width="20dip"
					    android:layout_height="20dip"
					    android:layout_weight="0"
					    android:src="@drawable/check_normal"
					    android:gravity="center_vertical"/>
                    
                    
					<TextView
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_weight="1"
					    android:gravity="center_vertical"
					    android:text="不限"
					    android:textSize="12sp" />    
					    
					<ImageView
					    android:id="@+id/gender_male"
                        android:layout_width="20dip"
					    android:layout_height="20dip"
					    android:layout_weight="0"
					    android:src="@drawable/check_normal"
					    android:gravity="center_vertical"/>
                    
                    
					<TextView
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_weight="1"
					    android:gravity="center_vertical"
					    android:text="男"
					    android:textSize="12sp" />  

					<ImageView
					    android:id="@+id/gender_female"
                        android:layout_width="20dip"
					    android:layout_height="20dip"
					    android:layout_weight="0"
					    android:src="@drawable/check_normal"
					    android:gravity="center_vertical"/>
                    
                    
					<TextView
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_weight="1"
					    android:gravity="center_vertical"
					    android:text="女"
					    android:textSize="12sp" />  
					
                </LinearLayout>
		       
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip" >

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:text="年龄阶段"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/age_any"
                        android:layout_width="20dip"
					    android:layout_height="20dip"
					    android:layout_weight="0"
					    android:src="@drawable/check_normal"
					    android:gravity="center_vertical"/>
                    
                    
					<TextView
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_weight="1"
					    android:gravity="center_vertical"
					    android:text="不限"
					    android:textSize="12sp" />    
					    
					<ImageView
					    android:id="@+id/age_old"
                        android:layout_width="20dip"
					    android:layout_height="20dip"
					    android:layout_weight="0"
					    android:src="@drawable/check_normal"
					    android:gravity="center_vertical"/>
                    
                    
					<TextView
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_weight="1"
					    android:gravity="center_vertical"
					    android:text="老人"
					    android:textSize="12sp" />  

					<ImageView
					    android:id="@+id/age_child"
                        android:layout_width="20dip"
					    android:layout_height="20dip"
					    android:layout_weight="0"
					    android:src="@drawable/check_normal"
					    android:gravity="center_vertical"/>
                    
                    
					<TextView
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_weight="1"
					    android:gravity="center_vertical"
					    android:text="儿童"
					    android:textSize="12sp" />  
					
                </LinearLayout>
                
            </LinearLayout>

            <Button
                android:id="@+id/apply"
                android:layout_width="120dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="应用"
                android:textSize="12sp"
                />
            
        </LinearLayout>
        
    </RelativeLayout>
    
</RelativeLayout>