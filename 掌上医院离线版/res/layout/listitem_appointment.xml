<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <LinearLayout
	    android:layout_width="60dip"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	          
		<ImageView 
		    android:id="@+id/listitem_doctorimg"
			style="@style/user_face_image"
			android:layout_margin="5dip"/>
		
		<TextView 
		    android:id="@+id/listitem_doctorname"   
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dip"
			android:gravity="center"
			android:text="崔学范"/>
				
	</LinearLayout>
		
	<LinearLayout
   		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"   
		android:orientation="vertical"
		android:layout_weight="1"
		android:padding="5dip">
	
		<LinearLayout
	   		android:layout_width="fill_parent" 
			android:layout_height="wrap_content"   
			android:orientation="horizontal"
			android:layout_marginBottom="5dip">
		
			<TextView 
		        android:layout_width="wrap_content" 
		     	android:layout_height="wrap_content"
		     	android:textSize="@dimen/text_size_12"
		     	android:textColor="@color/listitem_black"
		     	android:singleLine="true"
		     	android:gravity="center"
		     	android:text="职称："/>
   
			<TextView 
			    android:id="@+id/listitem_zhicheng" 
		        android:layout_width="fill_parent" 
		     	android:layout_height="wrap_content"
		     	android:textSize="@dimen/text_size_12"
		     	android:textColor="@color/listitem_black"
		     	android:singleLine="true"
		     	android:gravity="left"
		     	android:text="主任医师教授"/>			
						
		</LinearLayout>
 
		<LinearLayout
	   		android:layout_width="fill_parent" 
			android:layout_height="wrap_content"   
			android:orientation="horizontal"
			android:layout_marginBottom="5dip">
					
			<TextView
		        android:layout_width="wrap_content" 
		     	android:layout_height="wrap_content"
		     	android:textSize="@dimen/text_size_12"
		     	android:textColor="@color/listitem_black"
		     	android:singleLine="true"
		     	android:gravity="center"
		     	android:text="工号："/>
	  
			<TextView 
			    android:id="@+id/listitem_gonghao" 
		        android:layout_width="fill_parent" 
		     	android:layout_height="wrap_content"
		     	android:textSize="@dimen/text_size_12"
		     	android:textColor="@color/listitem_black"
		     	android:singleLine="true"
		     	android:gravity="left"
		     	android:text="2901"/>	
		     	
		</LinearLayout>
		
		<TextView 
		    android:id="@+id/listitem_summary" 
	        android:layout_width="fill_parent" 
	     	android:layout_height="wrap_content"
	     	android:textSize="@dimen/text_size_10"
	     	android:textColor="@color/listitem_gray"
	     	android:text="男，留日医学博士、主任医师、硕士研究生导师。从事本专业临床工作二十余年，熟悉本专业的常见病，多发病，肺部感染，慢性阻塞性肺病，支气管哮喘，肺结核，肺部肿瘤等。主要致力于肺部感染性疾病研究。获得教育部留学回国人员科研启动基金和院引进人才科研基金。在国内外杂志上发表26篇文章，主编及参编专著6部。"
	     	/> 
	    
	</LinearLayout>
    
</LinearLayout>
