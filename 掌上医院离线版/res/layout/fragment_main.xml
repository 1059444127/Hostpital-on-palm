<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">	

	<FrameLayout android:id="@+id/container" 
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:layout_weight="1">
       
		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical" >
		    
		    <View 
		        android:id="@+id/center" 
		        android:layout_width="fill_parent" 
		        android:layout_height="0dip" 
		        android:layout_centerInParent="true"/>
		    
		    <View 
		        android:id="@+id/centerY" 
		        android:layout_width="fill_parent" 
		        android:layout_height="0dip" 
		        android:layout_marginBottom="30dip"
		        android:layout_centerVertical="true"
		        android:layout_above="@id/center"/>
		    
		    <android.support.v4.view.ViewPager
		        android:id="@+id/banner"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_above="@id/centerY"
		        android:layout_alignParentLeft="true"/>
		    
		    <RelativeLayout 
		        android:id="@+id/change"
		        android:layout_width="fill_parent" 
		        android:layout_height="30dip" 
		        android:background="#20000000"
		        android:layout_alignBottom="@id/banner">
		        
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:layout_marginLeft="10dip"
		            android:text="江苏省人民医院就诊环境"
		            android:layout_alignParentLeft="true"
		            android:gravity="center_vertical"/>
		        
		        <ImageView 
		            android:id="@+id/image_1" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_marginRight="5.0dip" 
		            android:src="@drawable/news_image_unselected" 
		            android:layout_toLeftOf="@id/image_2" />
		        
		        <ImageView 
		            android:id="@+id/image_2" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_marginRight="5.0dip" 
		            android:src="@drawable/news_image_unselected" 
		            android:layout_toLeftOf="@id/image_3" />
		        
		        <ImageView 
		            android:id="@+id/image_3" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:src="@drawable/news_image_unselected" 
		            android:layout_centerHorizontal="true" />
		        
		        <ImageView 
		            android:id="@+id/image_4" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="5.0dip" 
		            android:src="@drawable/news_image_unselected" 
		            android:layout_toRightOf="@id/image_3" />
		        
		        <ImageView 
		            android:id="@+id/image_5" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="5.0dip" 
		            android:src="@drawable/news_image_unselected" 
		            android:layout_toRightOf="@id/image_4" />
		        
		    </RelativeLayout>

		    <TextView
		        android:id="@+id/banquan"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="15dip"
		        android:layout_alignParentBottom="true"
		        android:text="Copyright®2014" 
		        android:textColor="#333333"  
		        android:textSize="12sp"
		        android:gravity="center"/>
		    
		    <TableLayout 
		        android:id="@+id/functable"
		        android:layout_width="fill_parent" 
		        android:layout_height="fill_parent" 
		        android:layout_margin="20dip"
		        android:layout_below="@id/change"
		        android:layout_above="@id/banquan">
		        
		        <TableRow 
		            android:layout_width="fill_parent" 
		            android:layout_height="0.0dip" 
		            android:layout_marginBottom="10.0dip" 
		            android:layout_weight="1.0">
		            
		            <RelativeLayout 
		                android:orientation="vertical" 
		                android:layout_width="0.0dip" 
		                android:layout_height="fill_parent" 
		                android:layout_weight="1.0">
		                
		                <LinearLayout 
		                    android:orientation="vertical" 
		                    android:layout_width="fill_parent" 
		                    android:layout_height="wrap_content" 
		                    android:layout_centerInParent="true"> 
		                    
		                    <!-- 医院特色 -->
		                    <ImageView  
		                        android:layout_gravity="center_horizontal" 
		                        android:id="@+id/mainfunc_yiyuantese" 
		                        android:layout_width="57.0dip" 
		                        android:layout_height="57.0dip" 
		                        android:src="@drawable/mainfunc_yiyuanjianjie"/>
		                    
		                    <TextView 
		                        android:textSize="16.0sp" 
		                        android:gravity="center" 
		                        android:layout_gravity="center_horizontal" 
		                        android:layout_width="fill_parent" 
		                        android:layout_height="wrap_content" 
		                        android:layout_marginTop="5dip" 
		                        android:text="医院简介" />
		                    
		                </LinearLayout>
		                
		            </RelativeLayout>
		            
		            <RelativeLayout 
		                android:orientation="vertical" 
		                android:layout_width="0.0dip" 
		                android:layout_height="fill_parent" 
		                android:layout_weight="1.0">
		                
		                <LinearLayout 
		                    android:orientation="vertical" 
		                    android:layout_width="fill_parent" 
		                    android:layout_height="wrap_content" 
		                    android:layout_centerInParent="true">
		                    
		                    <!-- 就医导航 -->
		                    <ImageView 
		                        android:layout_gravity="center_horizontal" 
		                        android:id="@+id/mainfunc_jiuyidaohang" 
		                        android:layout_width="57.0dip" 
		                        android:layout_height="57.0dip" 
		                        android:src="@drawable/mainfunc_guahaoyindao"/>
		                    
		                    <TextView 
		                        android:textSize="16sp" 
		                        android:gravity="center" 
		                        android:layout_gravity="center_horizontal" 
		                        android:layout_width="fill_parent" 
		                        android:layout_height="wrap_content" 
		                        android:layout_marginTop="5dip" 
		                        android:text="挂号引导" />
		                    
		                </LinearLayout>
		                
		            </RelativeLayout>
		            
		            <RelativeLayout 
		                android:orientation="vertical" 
		                android:layout_width="0.0dip" 
		                android:layout_height="fill_parent" 
		                android:layout_weight="1.0">
		                
		                <LinearLayout 
		                    android:orientation="vertical" 
		                    android:layout_width="fill_parent" 
		                    android:layout_height="wrap_content" 
		                    android:layout_centerInParent="true">
		                    
		                    <!-- 预约挂号 -->
		                    <ImageView 
		                        android:layout_gravity="center_horizontal" 
		                        android:id="@+id/mainfunc_yuyueguahao" 
		                        android:layout_width="57.0dip" 
		                        android:layout_height="57.0dip" 
		                        android:src="@drawable/mainfunc_yuyueguahao"/>
		                    
		                    <TextView 
		                        android:textSize="16sp" 
		                        android:gravity="center" 
		                        android:layout_gravity="center_horizontal" 
		                        android:layout_width="fill_parent" 
		                        android:layout_height="wrap_content" 
		                        android:layout_marginTop="5dip" 
		                        android:text="预约挂号" />
		                    
		                </LinearLayout>
		                
		            </RelativeLayout>
		            
		        </TableRow>
		        
		        <TableRow 
		            android:layout_width="fill_parent" 
		            android:layout_height="0.0dip" 
		            android:layout_weight="1.0">
		            
		            <RelativeLayout 
		                android:orientation="vertical" 
		                android:layout_width="wrap_content" 
		                android:layout_height="fill_parent" 
		                android:layout_weight="1.0">
		                
		                <LinearLayout 
		                    android:orientation="vertical" 
		                    android:layout_width="fill_parent" 
		                    android:layout_height="wrap_content" 
		                    android:layout_centerInParent="true"> 
		                    
		                    <!-- 我的服务 -->
		                    <ImageView 
		                        android:layout_gravity="center_horizontal" 
		                        android:id="@+id/mainfunc_wodefuwu" 
		                        android:layout_width="57.0dip" 
		                        android:layout_height="57.0dip" 
		                        android:src="@drawable/mainfunc_shishihouzhen" />
		                    
		                    <TextView 
		                        android:textSize="16sp" 
		                        android:gravity="center" 
		                        android:layout_gravity="center_horizontal" 
		                        android:layout_width="fill_parent" 
		                        android:layout_height="wrap_content" 
		                        android:layout_marginTop="5dip" 
		                        android:text="实时候诊" />
		                    
		                </LinearLayout>
		                
		            </RelativeLayout>
		            
		            <RelativeLayout 
		                android:orientation="vertical" 
		                android:layout_width="wrap_content" 
		                android:layout_height="fill_parent" 
		                android:layout_weight="1.0">
		                
		                <LinearLayout 
		                    android:orientation="vertical" 
		                    android:layout_width="fill_parent" 
		                    android:layout_height="wrap_content" 
		                    android:layout_centerInParent="true">
		                    
		                    <!-- 操作指南 -->
		                    <ImageView 
		                        android:layout_gravity="center_horizontal" 
		                        android:id="@+id/mainfunc_caozuozhinan" 
		                        android:layout_width="57.0dip" 
		                        android:layout_height="57.0dip" 
		                        android:src="@drawable/mainfunc_dianzibaogao"/>
		                    
		                    <TextView 
		                        android:textSize="16sp" 
		                        android:gravity="center" 
		                        android:layout_gravity="center_horizontal" 
		                        android:layout_width="fill_parent" 
		                        android:layout_height="wrap_content" 
		                        android:layout_marginTop="5dip" 
		                        android:text="电子报告" />
		                    
		                </LinearLayout>
		                
		            </RelativeLayout>
		            
		            <RelativeLayout 
		                android:layout_width="wrap_content" 
		                android:layout_height="fill_parent" 
		                android:layout_weight="1.0">
		               
						<LinearLayout 
						    android:orientation="vertical" 
						    android:layout_width="fill_parent" 
						    android:layout_height="wrap_content" 
						    android:layout_centerInParent="true">
		                    
						    <!-- 更多 -->
		                    <ImageView 
		                        android:layout_gravity="center_horizontal" 
		                        android:id="@+id/mainfunc_gengduo" 
		                        android:layout_width="57.0dip" 
		                        android:layout_height="57.0dip" 
		                        android:src="@drawable/mainfunc_gengduo"/>
		                    
		                    <TextView 
		                        android:textSize="16sp" 
		                        android:gravity="center" 
		                        android:layout_gravity="center_horizontal" 
		                        android:layout_width="fill_parent" 
		                        android:layout_height="wrap_content" 
		                        android:layout_marginTop="5dip"
		                        android:text="使用助手" />
		                    
		                </LinearLayout>
		                
		            </RelativeLayout>
		            
		        </TableRow>
		        
		    </TableLayout>
		    
		</RelativeLayout>
		
	</FrameLayout>
	
</LinearLayout>