<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_relativelayout_header" 
  	android:layout_width="fill_parent" 
  	android:layout_height="40dip"
  	android:background="@drawable/widget_head_bg">
  	
    <ImageView
    	android:id="@+id/main_head_logo"
  		android:layout_width="40dip"
		android:layout_height="40dip"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:src="@drawable/drawer_toggle"/>
    
    <ImageView 
        android:id="@+id/main_head_title"
        android:src="@drawable/main_title"
        android:layout_centerInParent="true"
        android:layout_width="100dip"
		android:layout_height="40dip"/>
	
   	<ProgressBar 
		android:id="@+id/main_head_progress" 
		style="@style/loading_small"
		android:layout_toRightOf="@id/main_head_title"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5.0dip"
		android:visibility="gone"/>
    
    <ImageButton
    	android:id="@+id/main_head_loginbutton"
  		android:layout_width="40dip"
		android:layout_height="40dip"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="2.0dip"
		android:background="@drawable/frame_icon_account"/>
    
    <ImageButton
    	android:id="@+id/main_head_searchbutton"
  		android:layout_width="40dip"
		android:layout_height="40dip"
		android:layout_toLeftOf="@id/main_head_loginbutton"
		android:layout_centerVertical="true"
		android:layout_marginRight="2.0dip"
		android:background="@drawable/frame_icon_search"/>
    	
</RelativeLayout>
